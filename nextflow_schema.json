{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/proteogenomicsdb/main/nextflow_schema.json",
    "title": "nf-core/proteogenomicsdb pipeline parameters",
    "description": "The proteogenomicsdb pipeline (formerly known as pgdb) creates custom protein databases for ProteoGenomics data analysis.",
    "type": "object",
    "$defs": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": ["outdir"],
            "properties": {
                "input": {
                    "type": "string",
                    "format": "file-path",
                    "exists": true,
                    "schema": "assets/schema_input.json",
                    "mimetype": "text/csv",
                    "pattern": "^\\S+\\.csv$",
                    "description": "Path to comma-separated file containing information about the samples in the experiment.",
                    "help_text": "You will need to create a design file with information about the samples in your experiment before running the pipeline. Use this parameter to specify its location. It has to be a comma-separated file with 3 columns, and a header row.",
                    "fa_icon": "fas fa-file-csv"
                },
                "outdir": {
                    "type": "string",
                    "format": "directory-path",
                    "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
                    "fa_icon": "fas fa-folder-open"
                }
            }
        },
        "generic_options": {
            "title": "Generic options",
            "type": "object",
            "fa_icon": "fas fa-file-import",
            "description": "Less common options for the pipeline, typically set in a config file.",
            "help_text": "These options are common to all nf-core pipelines and allow you to customise some of the core preferences for how the pipeline runs.\n\nTypically these options would be set in a Nextflow config file loaded for all pipeline runs, such as `~/.nextflow/config`.",
            "properties": {
                "version": {
                    "type": "boolean",
                    "description": "Display version and exit.",
                    "fa_icon": "fas fa-question-circle",
                    "hidden": true
                },
                "validate_params": {
                    "type": "boolean",
                    "description": "Boolean whether to validate parameters against the schema at runtime",
                    "default": true,
                    "fa_icon": "fas fa-check-square",
                    "hidden": true
                }
            }
        },
        "other_options": {
            "title": "other options",
            "type": "object",
            "description": "input files for running the workflow.",
            "properties": {
                "monochrome_logs": {
                    "type": "boolean",
                    "description": "placeholder text"
                },
                "help_full": {
                    "type": "boolean",
                    "description": "placeholder text"
                },
                "show_hidden": {
                    "type": "boolean",
                    "description": "placeholder text"
                },
                "email": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "email_on_fail": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "plaintext_email": {
                    "type": "boolean",
                    "description": "placeholder text"
                },
                "hook_url": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "custom_config_base": {
                    "type": "string",
                    "default": "https://raw.githubusercontent.com/nf-core/configs/master",
                    "description": "placeholder text"
                },
                "custom_config_version": {
                    "type": "string",
                    "default": "master",
                    "description": "placeholder text"
                }
            }
        },
        "pipeline_options": {
            "title": "pipeline_options",
            "type": "object",
            "description": "Paramiters for running the pipeline.",
            "properties": {
                "dna_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/dna_config.yaml"
                },
                "custom_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/custom_config.yaml"
                },
                "reference": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "username": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "password": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "gnomad_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/gnomad_config.yaml"
                },
                "cbio_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/cbioportal_config.yaml"
                },
                "stop_codons": {
                    "type": "boolean",
                    "description": "placeholder text"
                },
                "igenomes_base": {
                    "type": "string",
                    "default": "s3://ngi-igenomes/igenomes/",
                    "description": "placeholder text"
                },
                "igenomes_ignore": {
                    "type": "boolean",
                    "description": "placeholder text"
                },
                "multiqc_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/assets/multiqc_config.yaml"
                },
                "multiqc_logo": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "max_multiqc_email_size": {
                    "type": "string",
                    "default": "25.MB",
                    "description": "placeholder text"
                },
                "multiqc_methods_description": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "publish_dir_mode": {
                    "type": "string",
                    "default": "copy",
                    "description": "placeholder text"
                },
                "pipelines_testdata_base_path": {
                    "type": "string",
                    "default": "https://raw.githubusercontent.com/nf-core/test-datasets/7f1614bae0ddf66e60be78c3d9fa55440465ac8/",
                    "description": "placeholder text"
                },
                "config_profile_name": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "config_profile_description": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "config_profile_contact": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "config_profile_url": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "annotation": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "transcripts": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "ensembl_downloader_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/ensembl_downloader_config.yaml"
                },
                "ensembl_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/ensembl_config.yaml"
                },
                "species_id": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "ncrna_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/ncrna_config.yaml"
                },
                "pseudogenes_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/pseudogenes_config.yaml"
                },
                "altorfs_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/altorfs_config.yaml"
                },
                "cosmic_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/cosmic_config.yaml"
                },
                "genecode_transcripts_url": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "genecode_annotations_url": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "gnomad_url": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "cbio_study": {
                    "type": "string",
                    "description": "placeholder text"
                },
                "minimum_aa": {
                    "type": "integer",
                    "description": "placeholder text"
                },
                "clean_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/clean_config.yaml"
                },
                "decoy_config": {
                    "type": "string",
                    "description": "placeholder text",
                    "default": "/exports/eddie/scratch/s2215490/proteogenomicsdb/conf/pypgatk_config_files/protein_decoy.yaml"
                }
            }
        },
        "skip_options": {
            "title": "skip_options",
            "type": "object",
            "description": "Paramiters for running the pipeline.",
            "properties": {
                "skip_rnaseqdb": {
                    "type": "boolean",
                    "default": true
                },
                "skip_dnaseq": {
                    "type": "boolean",
                    "default": true
                },
                "skip_vcf": {
                    "type": "boolean",
                    "default": true
                },
                "skip_ensembldb": {
                    "type": "boolean",
                    "default": true
                },
                "skip_proteome": {
                    "type": "boolean",
                    "default": true
                },
                "skip_ncrna": {
                    "type": "boolean",
                    "default": true
                },
                "skip_pseudogenes": {
                    "type": "boolean",
                    "default": true
                },
                "skip_altorfs": {
                    "type": "boolean",
                    "default": true
                },
                "skip_cosmicdb": {
                    "type": "boolean",
                    "default": true
                },
                "skip_gnomaddb": {
                    "type": "boolean",
                    "default": true
                },
                "skip_cbioportaldb": {
                    "type": "boolean",
                    "default": true
                },
                "skip_decoy": {
                    "type": "boolean",
                    "default": true
                },
                "skip_fastqc": {
                    "type": "boolean",
                    "description": "placeholder text",
                    "default": true
                },
                "skip_trimming": {
                    "type": "boolean",
                    "description": "placeholder text",
                    "default": true
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/$defs/input_output_options"
        },
        {
            "$ref": "#/$defs/generic_options"
        },
        {
            "$ref": "#/$defs/other_options"
        },
        {
            "$ref": "#/$defs/pipeline_options"
        },
        {
            "$ref": "#/$defs/skip_options"
        }
    ],
    "properties": {
        "fasta_index": {
            "type": "string"
        },
        "faidx_get_genome_sizes": {
            "type": "boolean",
            "default": true
        },
        "samtools_sort_index": {
            "type": "string",
            "default": "bai"
        },
        "freebayes_limit_analysis": {
            "type": "string"
        },
        "freebayes_populations": {
            "type": "string"
        },
        "freebayes_copy_number_bed": {
            "type": "string"
        },
        "multiqc_extra_config": {
            "type": "string"
        },
        "multiqc_replace_names": {
            "type": "string"
        },
        "multiqc_sample_names": {
            "type": "string"
        },
        "grch38_url": {
            "type": "string",
            "default": "ftp://ftp.ensembl.org/pub/release-115/fasta/homo_sapiens/cdna/Homo_sapiens.GRCh38.cdna.all.fa.gz"
        }
    }
}
