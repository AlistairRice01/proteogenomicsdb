nextflow_pipeline {

    name "Test pypgatk_cosmic"
    script "../main.nf"
    tag "module"
    process "PYPGATK_COSMIC"

    test("-profile pypgatk_cosmic test") {

        options "-stub"

        when {
            params {
                outdir = "${outputDir}"
            }
            process {
                """
                input[0] = Channel.of([
                    file('params.cosmic_config, checkIfExists: true')
                ])
                input[1] = ['username']
                input[2] = ['password']

                """
path cosmic_config
    val username
    val password
            }
        }

        then {
            assertAll(

                { assert process.success },
                { assert snapshot(process.out).match() }
            
            )
        }
    }
}
