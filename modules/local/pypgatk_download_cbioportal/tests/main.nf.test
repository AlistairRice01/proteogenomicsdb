nextflow_pipeline {

    name "Test pypgatk_download_cbioportal"
    script "../main.nf"
    tag "module"
    process "PYPGATK_CBIOPORTAL_DOWNLOAD"

    test("-profile pypgatk_download_cbioportal test") {

        when {
            params {
                outdir = "${outputDir}"
            }
            process {
                """
                input[0] = Channel.of([
                    [ id: 'cbioportal_config' ],
                    file('params.cbio_config, checkIfExists: true')
                ])
                input[1] = ['es_iocurie_2014']

                """

            }
        }

        then {
            assertAll(

                { assert process.success },
                { assert snapshot(process.out).match() }
            
            )
        }
    }

    test("-profile pypgatk_download_cbioportal test -stub") {

        options "-stub"

        when {
            params {
                outdir = "${outputDir}"
            }
            process {
                """
                input[0] = Channel.of([
                    [ id: 'cbioportal_config' ],
                    file('params.cbio_config, checkIfExists: true')
                ])
                input[1] = ['es_iocurie_2014']

                """

            }
        }

        then {
            assertAll(

                { assert process.success },
                { assert snapshot(process.out).match() }
            
            )
        }
    }
}
