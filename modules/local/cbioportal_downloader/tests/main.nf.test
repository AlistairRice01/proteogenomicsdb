nextflow_pipeline {

    name "Test cbioportal_downloader"
    script "../main.nf"
    tag "module"
    process "CBIOPORTAL_DOWNLOADER"

    test("-profile cbioportal_downloader test") {

        when {
            params {
                outdir = "${outputDir}"
            }
            process {
                """
                input[0] = Channel.of([
                    [ id: 'cbioportal_config' ],
                    file('params.cbio_config, checkIfExists: true')
                ])
                input[1] = ['es_iocurie_2014']

                """

            }
        }

        then {
            assertAll(

                { assert process.success },
                { assert snapshot(process.out).match() }
            
            )
        }
    }



}
