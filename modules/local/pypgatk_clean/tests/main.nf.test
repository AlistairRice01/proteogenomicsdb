nextflow_pipeline {

    name "Test pypgatk_clean"
    script "../main.nf"
    tag "module"
    process "PYPGATK_CLEAN"

    test("-profile pypgatk_clean test") {

        options "-stub"

        when {
            params {
                outdir = "${outputDir}"
            }
            process {
                """
                input[0] = Channel.of([
                    [ id: 'test' ], 
                    file('test_file.vcf')
                ])
                input[1] = Channel.of([
                    [ id: 'test' ], 
                    file('test_file.gtf')
                ])
                input[2] = Channel.of([
                    [ id: 'test' ], 
                    file('test_file.fasta')
                ])
                input[3] = Channel.of([
                    file('test_file.config')
                ])

                """

            }
        }

        then {
            assertAll(

                { assert process.success },
                { assert snapshot(process.out).match() }
            
            )
        }
    }
}
