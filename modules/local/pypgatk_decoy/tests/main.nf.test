nextflow_pipeline {

    name "Test pypgatk_decoy"
    script "../main.nf"
    tag "module"
    process "PYPGATK_DECOY"

    test("-profile pypgatk_decoy test") {

        when {
            params {
                outdir = "${outputDir}"
            }
            process {
                """
                input[0] = Channel.of([
                    [ id: 'database' ], 
                    file('$projectDir/assets/test_files/database.fa, checkIfExists: true')
                ])
                input[1] = Channel.of([ 
                    file('params.decoy_config, checkIfExists: true')
                ])

                """
            }
        }

        then {
            assertAll(

                { assert process.success },
                { assert snapshot(process.out).match() }
            
            )
        }
    }

    test("-profile pypgatk_decoy test -stub") {

        options "-stub"

        when {
            params {
                outdir = "${outputDir}"
            }
            process {
                """
                input[0] = Channel.of([
                    [ id: 'database' ], 
                    file('$projectDir/assets/test_files/database.fa, checkIfExists: true')
                ])
                input[1] = Channel.of([ 
                    file('params.decoy_config, checkIfExists: true')
                ])

                """
            }
        }

        then {
            assertAll(

                { assert process.success },
                { assert snapshot(process.out).match() }
            
            )
        }
    }
}
