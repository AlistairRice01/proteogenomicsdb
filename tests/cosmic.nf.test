nextflow_pipeline {

name "Test pipeline with cosmic database generation"
    script "../main.nf"
    tag "pipeline"

    test("params: --skip_cosmicdb false") {

        when {
            params {

                skip_cosmicdb = false
                
                username = 's2215490@ed.ac.uk'
                password = 'BeepBoop8294!'

                cosmic_genes_url     = "https://cancer.sanger.ac.uk/api/mono/products/v1/downloads/scripted?path=grch38/cosmic/v103/Cosmic_Genes_Fasta_v103_GRCh38.tar&bucket=downloads"
                cosmic_mutations_url = "https://cancer.sanger.ac.uk/api/mono/products/v1/downloads/scripted?path=grch38/cosmic/v103/Cosmic_GenomeScreensMutant_Tsv_v103_GRCh38.tar&bucket=downloads"    

                params.cosmic_cancer_type = 'all'
                
                outdir      = "${outputDir}" 
                            
            }
        }

        then {
            // stable_name: All files + folders in ${params.outdir}/ with a stable name
            def stable_name = getAllFilesFromDir(params.outdir, relative: true, includeDir: true, ignore: ['pipeline_info/*.{html,json,txt}'])
            // stable_path: All files in ${params.outdir}/ with stable content
            def stable_path = getAllFilesFromDir(params.outdir, ignoreFile: 'tests/.nftignore')
            assertAll(
                { assert workflow.success},
                { assert snapshot(
                    // Number of successful tasks
                    workflow.trace.succeeded().size(),
                    // pipeline versions.yml file for multiqc from which Nextflow version is removed because we test pipelines on multiple Nextflow versions
                    removeNextflowVersion("$outputDir/pipeline_info/nf_core_proteogenomicsdb_software_mqc_versions.yml"),
                    // All stable path name, with a relative path
                    stable_name,
                    // All files with stable contents
                    stable_path
                ).match() }
            )
        }
    }

    test("params: --skip_cosmicdb false -stub") {

        options "-stub"

        when {
